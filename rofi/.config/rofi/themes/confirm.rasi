/* Confirm Dialog */

@import "colors/color_picker.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Monaspace Nerd Font 12";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					1px;
    border-radius:          10px;
    border-color:           @fg;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@fg;
}
